
@model REPORTS.Dtos.FormDto

@{
    ViewData["Title"] = "Edit Form";
}

<div class="container-fluid">
    <p class="display-6">EDIT FORM</p>
<hr />
<div class="row table-body">
    <div class="col-md-12">
        <form class="row" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger col-md-1"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-md-8">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <input type="submit" value="Update" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success mt-3">Back to List</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


