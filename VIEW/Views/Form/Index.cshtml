@model IEnumerable<REPORTS.Dtos.FormDto>

@{
    ViewData["Title"] = "Registered Forms";
}

<div class="container-fluid">


     <p class="display-6">REGISTERED FORMS</p>

<p>
    <a asp-action="Create" class="btn btn-success"> <i class="fas fa-plus" aria-hidden="true"></i> New Form</a>
</p>
<table class="table table-body">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @if(Model != null)
            {
                
            
                @foreach (var item in Model)
                {
                    var tm = "#myModal" + item.Id;
                    var mid = "myModal" + item.Id;
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary mx-2">Edit</a>
                    </td>
                    <td>
                         <form method="post" asp-action="Delete" asp-route-id="@item.Id" >
                              <button type="submit" class="btn btn-danger mx-2">Delete </button>
                         </form>
                    </td>

                </tr>
                }
            }
    </tbody>
</table>
</div>
