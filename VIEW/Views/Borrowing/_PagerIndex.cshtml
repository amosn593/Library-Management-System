@model DOMAIN.Models.PaginationModel


<div class="container">
        @if(Model.TotalPages > 0)
        {
            <ul class="pagination justify-content-end">
                @if(Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Borrowing" asp-action="Index" asp-route-pg="1">
                            FIRST
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Borrowing" asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)">
                            PREVIOUS
                        </a>
                    </li>
                    
                }
                @for (var pg = Model.StartPage; pg <= Model.EndPage; pg++)
                {
                    <li class="page-item @(pg == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Borrowing" asp-action="Index" asp-route-pg="@pg">
                            @pg
                        </a>
                    </li>
                    
                }
                @if(Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Borrowing" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)">
                            NEXT
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Borrowing" asp-action="Index" asp-route-pg="@(Model.TotalPages)">
                            LAST
                        </a>
                    </li>
                    
                }

            </ul>
        }
    </div>