@model DOMAIN.Models.Borrowing;

@{
    ViewData["Title"] = "Issue Book";
}


<div class="container-fluid">
<p class="display-6">ISSUE BOOK</p>

<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            
            <div class="row my-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Student ADMIN NO.</label>
                        <input type="text" name="StudentAdminNo" class ="form-control" required />
                    </div>
                    
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label  class="control-label">Book Serial NO.</label>
                        <input type="text" name="BookSerialNo" class ="form-control" required />
                    </div>
                </div>
            </div>
            <div class="row my-3">
                <div class="col-md-6">
                    
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ReturnDate" class="control-label"></label>
                        <input asp-for="ReturnDate" class="form-control" />
                        
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Issue Book" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success my-3 py-2">Back to Listings</a>
</div>

</div>



